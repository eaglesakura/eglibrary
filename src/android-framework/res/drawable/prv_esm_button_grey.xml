<?xml version="1.0" encoding="utf-8"?>
<inset
        android:insetLeft="@dimen/EsMaterial.Button.ExternalMarginHorizontal"
        android:insetTop="@dimen/EsMaterial.Button.ExternalMarginVertical"
        android:insetRight="@dimen/EsMaterial.Button.ExternalMarginHorizontal"
        android:insetBottom="@dimen/EsMaterial.Button.ExternalMarginVertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list android:paddingMode="stack">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/EsMaterial.Button.Shadow"/>
                <corners android:radius="@dimen/EsMaterial.Button.ShadowRadius"/>
            </shape>
        </item>
        <item>
            <selector>
                <item android:state_enabled="false">
                    <inset android:inset="@dimen/cardview_compat_inset_shadow">
                        <shape android:shape="rectangle">
                            <padding
                                    android:left="@dimen/EsMaterial.Button.InternalMarginHorizontal"
                                    android:right="@dimen/EsMaterial.Button.InternalMarginHorizontal"/>
                            <corners android:radius="@dimen/cardview_default_radius"/>
                            <solid android:color="@color/EsMaterial.Grey.Button.Disabled"/>
                        </shape>
                    </inset>
                </item>
                <item android:state_focused="true">
                    <inset android:inset="@dimen/cardview_compat_inset_shadow">
                        <shape android:shape="rectangle">
                            <padding
                                    android:left="@dimen/EsMaterial.Button.InternalMarginHorizontal"
                                    android:right="@dimen/EsMaterial.Button.InternalMarginHorizontal"/>
                            <corners android:radius="@dimen/cardview_default_radius"/>
                            <solid android:color="@color/EsMaterial.Grey.Button.Focused"/>
                        </shape>
                    </inset>
                </item>
                <item android:state_pressed="true">
                    <inset android:inset="@dimen/cardview_compat_inset_shadow">
                        <shape android:shape="rectangle">
                            <padding
                                    android:left="@dimen/EsMaterial.Button.InternalMarginHorizontal"
                                    android:right="@dimen/EsMaterial.Button.InternalMarginHorizontal"/>
                            <corners android:radius="@dimen/cardview_default_radius"/>
                            <solid android:color="@color/EsMaterial.Grey.Button.Pressed"/>
                        </shape>
                    </inset>
                </item>
                <item>
                    <inset android:inset="@dimen/cardview_compat_inset_shadow">
                        <shape android:shape="rectangle">
                            <padding
                                    android:left="@dimen/EsMaterial.Button.InternalMarginHorizontal"
                                    android:right="@dimen/EsMaterial.Button.InternalMarginHorizontal"/>
                            <corners android:radius="@dimen/cardview_default_radius"/>
                            <solid android:color="@color/EsMaterial.Grey.Button.Normal"/>
                        </shape>
                    </inset>
                </item>
            </selector>
        </item>
    </layer-list>
</inset>