<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/EsMaterial.Margin.KeyLine1Horizontal"
            android:layout_marginRight="@dimen/EsMaterial.Margin.KeyLine1Horizontal"
            android:minHeight="@dimen/EsMaterial.Button.MinHeight"
            style="@style/CardView.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_margin="@dimen/EsMaterial.Button.Margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_margin="@dimen/EsMaterial.Button.Margin"
                    android:layout_gravity="center_vertical"
                    style="@style/EsMaterial.Font.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eglibrary.GoogleApi.Connecting"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>