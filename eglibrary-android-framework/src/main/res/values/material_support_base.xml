<resources>
    <attr name="esmNavigationDrawerBackgroundColor" format="color"/>
    <attr name="esmNavigationDrawerTextColor" format="color"/>
    <attr name="esmSeparatorBarColor" format="color"/>
    <attr name="esmWindowBackgroundColorDark" format="color"/>
    <attr name="esmButtonBaseColor" format="color"/>
    <attr name="esmButtonHighlightColorWeight" format="float"/>
    <attr name="esmButtonTextColorMode" format="enum">
        <enum name="light" value="0"/>
        <enum name="dark" value="1"/>
        <enum name="palette" value="2"/>
        <enum name="auto" value="3"/>
    </attr>

    <string name="EsMaterial.Dialog.Close">閉じる</string>
    <string name="EsMaterial.Dialog.OK">OK</string>
    <string name="EsMaterial.Dialog.Cancel">キャンセル</string>
    <string name="EsMaterial.OSS.Title">ライセンス情報</string>


    <dimen name="EsMaterial.Elevation.Normal">3dp</dimen>
    <dimen name="EsMaterial.Dialog.Button.Height">48dp</dimen>
    <dimen name="EsMaterial.Dialog.Content.MinHeight">52dp</dimen>
    <color name="EsMaterial.Dialog.Shadow">#0F000000</color>
    <dimen name="EsMaterial.Dialog.ShadowRadius">7dp</dimen>
    <dimen name="EsMaterial.Dialog.License.Height">320dp</dimen>

    <color name="EsMaterial.Background.Base">@color/EsMaterial.Grey.50</color>
    <color name="EsMaterial.Background.BaseDropShadow">#05000000</color>
    <color name="EsMaterial.Transparent">#00000000</color>
    <color name="EsMaterial.Transparent.Pressed">#0F000000</color>
    <color name="EsMaterial.Transparent.Ripple">#7F000000</color>

    <style name="EsMaterial.Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_fromlower_upper_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_layer_dummy</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_layer_dummy</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_fromlower_upper_exit</item>
    </style>

    <style name="EsMaterial.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 上から下に登場するAnimation -->
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="android:textSize">@dimen/EsMaterial.Font.Medium</item>
        <!-- CheckBox/RadioButton color -->
        <!--<item name="android:textColorPrimaryDisableOnly">@color/EsMaterial.Grey.750</item>-->
        <!--<item name="android:textColor">@color/EsMaterial.Grey.800</item>-->

        <!-- Button Color -->
        <!--<item name="colorButtonNormal">@color/EsMaterial.Grey.Theme</item>-->
        <item name="esmButtonBaseColor">@color/EsMaterial.Grey.Theme</item>
        <item name="esmButtonTextColorMode">dark</item>
    </style>


    <style name="EsMaterial.Font.Small" parent="EsMaterial.Base">
        <item name="android:textSize">@dimen/EsMaterial.Font.Small</item>
    </style>

    <style name="EsMaterial.Font.Normal" parent="EsMaterial.Base">
        <item name="android:textSize">@dimen/EsMaterial.Font.Medium</item>
    </style>

    <style name="EsMaterial.Font.Header" parent="EsMaterial.Base">
        <item name="android:textColor">@color/EsMaterial.Grey.900</item>
        <item name="android:textSize">@dimen/EsMaterial.Font.Medium</item>
    </style>

    <style name="EsMaterial.Font.Title.Card" parent="EsMaterial.Base">
        <item name="android:textColor">@color/EsMaterial.Grey.900</item>
        <item name="android:textSize">@dimen/EsMaterial.Font.Large</item>
    </style>

    <style name="EsMaterial.Font.Title" parent="EsMaterial.Base">
        <item name="android:textColor">@color/EsMaterial.Grey.900</item>
        <item name="android:textSize">@dimen/EsMaterial.Font.Title</item>
    </style>

    <color name="EsMaterial.Base.WindowBackground">@color/EsMaterial.Grey.50</color>

    <!-- Base -->
    <style name="EsMaterial.Theme.Base" parent="EsMaterial.Base">
        <!-- EsMaterial attributes -->
        <item name="android:windowBackground">@color/EsMaterial.Base.WindowBackground</item>
        <item name="esmNavigationDrawerBackgroundColor">@color/EsMaterial.Grey.50</item>
        <item name="esmNavigationDrawerTextColor">@color/EsMaterial.Grey.700</item>
        <item name="esmSeparatorBarColor">@color/EsMaterial.Grey.300</item>
        <item name="esmWindowBackgroundColorDark">@color/EsMaterial.Grey.300</item>
    </style>

    <style name="EsMaterial.Transparent" parent="EsMaterial.Theme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="EsMaterial.Theme.Grey.NoActionBar" parent="EsMaterial.Theme.Base">
        <item name="drawerArrowStyle">@style/EsMaterial.Grey.DrawerArrow</item>
        <item name="colorPrimary">@color/EsMaterial.Grey.500</item>
        <item name="colorPrimaryDark">@color/EsMaterial.Grey.600</item>
    </style>

    <style name="EsMaterial.Theme.Grey.Toolbar" parent="EsMaterial.Theme.Grey.NoActionBar">
        <item name="android:textColorPrimary">@color/EsMaterial.Grey.800</item>
        <item name="android:textColorSecondary">@color/EsMaterial.Grey.800</item>
        <item name="colorAccent">@color/EsMaterial.LightGreen.300</item>
    </style>

    <style name="EsMaterial.Theme.Red.NoActionBar" parent="EsMaterial.Theme.Base">
        <item name="drawerArrowStyle">@style/EsMaterial.Red.DrawerArrow</item>
        <item name="colorPrimary">@color/EsMaterial.Red.500</item>
        <item name="colorPrimaryDark">@color/EsMaterial.Red.600</item>
    </style>

    <style name="EsMaterial.Red.Toolbar" parent="EsMaterial.Theme.Red.NoActionBar">
        <item name="android:textColorPrimary">@color/EsMaterial.Grey.50</item>
        <item name="android:textColorSecondary">@color/EsMaterial.Grey.50</item>
        <item name="colorAccent">@color/EsMaterial.LightGreen.300</item>
    </style>
</resources>