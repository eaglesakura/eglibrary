<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="EsMaterial.Red.50">#FFEBEE</color>
    <color name="EsMaterial.Red.100">#FFCDD2</color>
    <color name="EsMaterial.Red.200">#EF9A9A</color>
    <color name="EsMaterial.Red.300">#E57373</color>
    <color name="EsMaterial.Red.400">#EF5350</color>
    <color name="EsMaterial.Red.500">#F44336</color>
    <color name="EsMaterial.Red.600">#E53935</color>
    <color name="EsMaterial.Red.700">#D32F2F</color>
    <color name="EsMaterial.Red.800">#C62828</color>
    <color name="EsMaterial.Red.900">#B71C1C</color>

    <color name="EsMaterial.Red.Button.Disabled">@color/EsMaterial.Red.400</color>
    <color name="EsMaterial.Red.Button.Normal">@color/EsMaterial.Red.500</color>
    <color name="EsMaterial.Red.Button.Focused">@color/EsMaterial.Red.500</color>
    <color name="EsMaterial.Red.Button.Pressed">@color/EsMaterial.Red.800</color>
    <color name="EsMaterial.Red.Button.Ripple">@color/EsMaterial.Red.900</color>

    <style name="EsMaterial.Red.DrawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/EsMaterial.Red.50</item>
    </style>

    <style name="EsMaterial.Red" parent="EsMaterial.Base">
        <item name="drawerArrowStyle">@style/EsMaterial.Red.DrawerArrow</item>
        <item name="colorPrimary">@color/EsMaterial.Red.500</item>
        <item name="colorPrimaryDark">@color/EsMaterial.Red.600</item>
        <!--<item name="colorAccent">#00FFFF</item>-->
    </style>

    <style name="EsMaterial.Red.NoActionBar" parent="EsMaterial.Red">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- FloatingActionButton -->
    <style name="EsMaterial.Red.FAButton">
        <item name="android:layout_margin">@dimen/EsMaterial.Margin.KeyLine1Horizontal</item>
        <item name="fab_colorNormal">@color/EsMaterial.Red.Button.Normal</item>
        <item name="fab_colorPressed">@color/EsMaterial.Red.Button.Pressed</item>
        <item name="fab_colorRipple">@color/EsMaterial.Red.Button.Ripple</item>
    </style>

    <style name="EsMaterial.Button.Red" parent="EsMaterial.Button.Base">
        <item name="android:background">@drawable/esm_button_red</item>
        <item name="android:textColor">@color/EsMaterial.Red.50</item>
    </style>

</resources>